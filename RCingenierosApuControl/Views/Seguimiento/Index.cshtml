<div class="modal fade" id="modal-cierreSeguimiento">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="clear();">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Cierre de seguimiento: </h4>
                <span id="txtdetalleCierre"> </span>
            </div>
            <div class="modal-body">

                <div class="row">

                 
                        <div class="form-group">
                            <label>Logros:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-pencil"></i>
                                </div>
                                <input type="text"  id="txtIdDetalleMovimiento"hidden />

                                <textarea rows="3" cols="10" type="text" id="txtLogros" class="form-control"></textarea>
                            </div>
                            <!-- /.input group -->
                        </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">

                    </div>
                    <div class="col-lg-4">
                        <button class="btn btn-success btn-lg" id="BtnGuardarCierreSeguimiento">Guardar</button>
                    </div>
                    <div class="col-lg-4">

                    </div>
           
                </div>

                <div class="row animate">
                    <button class="btn btn-danger" id="BtnCancelar">Salir </button>
                </div>
            </div>
        </div>
    </div>
</div>


